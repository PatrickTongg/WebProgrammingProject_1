
<body>
{{> nav}}
<h1>Add a New Restaurant</h1>
<form id="addRestaurantForm" method="POST" action="/api/restaurants">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="cuisine">Cuisine:</label>
    <input type="text" id="cuisine" name="cuisine" required>

    <label for="borough">Borough:</label>
    <input type="text" id="borough" name="borough">

    <label for="building">Building:</label>
    <input type="text" id="building" name="building" required>

    <label for="street">Street:</label>
    <input type="text" id="street" name="street" required>

    <label for="zipcode">Zipcode:</label>
    <input type="text" id="zipcode" name="zipcode" required>

    <h3>Grades</h3>
    <label for="gradeDate">Date:</label>
    <input type="date" id="gradeDate" name="gradeDate">

    <label for="grade">Grade:</label>
    <input type="text" id="grade" name="grade" >

    <label for="score">Score:</label>
    <input type="number" id="score" name="score" >

    <button type="submit">Add Restaurant</button>
</form>
<div class="error-container">
    {{#if error}}
        <p>{{error}}</p>
    {{/if}}
</div>
<script src="/javascripts/addRestaurant.js"></script>
</body>