<body class="login-body">
<div class="login-container" style="position: relative;">
    <a href="/" style="position: absolute; top: 10px; left: 10px; text-decoration: none; color: blue;">&larr; Back</a>

    <form>
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" placeholder="Username" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Password" required>

        <label for="renter-password">Renter Password:</label>
        <input type="password" id="renter-password" name="renter-password" placeholder="Renter Password" required>

        <button type="submit" id="submit">Submit</button>
    </form>
</div>
<br>
<div class="error-container">
    {{#if error}}
        <p>{{error}}</p>
    {{/if}}
</div>
<script src="/javascripts/register.js"></script>
</body>